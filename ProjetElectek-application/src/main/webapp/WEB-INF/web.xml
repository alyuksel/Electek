<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ResultsServlet</servlet-name>
        <servlet-class>JSPHandler.CandidatesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResultsByBVServlet</servlet-name>
        <servlet-class>JSPHandler.ResultsByBVServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailBVServlet</servlet-name>
        <servlet-class>JSPHandler.DetailBVServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SortResultsServlet</servlet-name>
        <servlet-class>JSPHandler.SortResultsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyResultsServlet</servlet-name>
        <servlet-class>JSPHandler.MyResultsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>JSPHandler.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>JSPHandler.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>JSPHandler.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultsServlet</servlet-name>
        <url-pattern>/ResultsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultsByBVServlet</servlet-name>
        <url-pattern>/ResultsByBVServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailBVServlet</servlet-name>
        <url-pattern>/DetailBVServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SortResultsServlet</servlet-name>
        <url-pattern>/SortResultsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyResultsServlet</servlet-name>
        <url-pattern>/MyResults</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
